@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle Contacto";
}

<h1 class="text-center">Contacto con .NET 7 (.NET Core MVC)</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="card-white"><strong>Detalle usuarios</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"<string>Nombre:</string>@Html.DisplayFor(m => m.Nombre) </li>
                    <li class="list-group-item"<string>Telefono:</string>@Html.DisplayFor(m => m.Telefono) </li>
                    <li class="list-group-item"<string>Celular:</string>@Html.DisplayFor(m => m.Celular) </li>
                    <li class="list-group-item"<string>Email:</string>@Html.DisplayFor(m => m.Email) </li>

                </ul>
                <a asp-controller="Inicio" asp-action="Index">Volver</a>



            </div>
        </div>

    </div>
</div>

